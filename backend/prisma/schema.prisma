generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Media {
  id Int @id @default(autoincrement())
  source_url String
  media_url String
  media_type String
  file_name String
  alt_text String
  created_at DateTime @default(now())
  errors String?

  @@index([alt_text])
}